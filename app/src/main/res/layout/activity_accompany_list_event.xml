<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_event_month_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_event_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/rectangle_ffff_blue"
        android:padding="4dp"
        android:text="@string/loading"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/text_view_event_month_day"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_event_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/rectangle_ffff_green"
        android:padding="4dp"
        android:text="@string/loading"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/text_view_event_year"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:text="@string/loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_event_month_day" />


</androidx.constraintlayout.widget.ConstraintLayout>